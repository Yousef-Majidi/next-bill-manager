{
	"name": "next-bill-manager",
	"version": "0.1.0",
	"private": true,
	"packages:": [
		"."
	],
	"packageManager": "pnpm@10.11.0",
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:coverage:check": "vitest run --coverage",
		"test:coverage:html": "vitest run --coverage --reporter=html",
		"test:coverage:lcov": "vitest run --coverage --reporter=lcov",
		"check-dependencies": "node scripts/check-dependencies.mjs",
		"validate-structure": "node scripts/validate-feature-structure.mjs",
		"validate-exports": "node scripts/validate-barrel-exports.mjs",
		"test-code-organization": "node scripts/test-code-organization.mjs",
		"validate-all": "pnpm run validate-structure && pnpm run validate-exports && pnpm run check-dependencies && pnpm run test-code-organization",
		"quality-check": "pnpm run lint && pnpm run test:coverage:check && pnpm run validate-all",
		"quality-gate": "node scripts/quality-gate.mjs",
		"quality-gate:full": "pnpm run quality-check && pnpm run build && pnpm run quality-gate",
		"pre-commit": "pnpm run validate-all",
		"prepare": "husky",
		"db:migrate": "node scripts/migrate.mjs scripts/migrations/migrate-consolidated-bills.mjs",
		"db:backup": "node scripts/migrate.mjs scripts/migrations/backup-all-collections.mjs",
		"db:restore": "node scripts/migrate.mjs scripts/migrations/restore-all-collections.mjs",
		"db:diagnose": "node scripts/migrate.mjs scripts/migrations/diagnose-all-collections.mjs",
		"version:patch": "npm version patch",
		"version:minor": "npm version minor",
		"version:major": "npm version major",
		"version:preview": "npm version prerelease --preid=beta",
		"release:prepare": "pnpm run quality-gate:full && pnpm run version:patch",
		"release:minor": "pnpm run quality-gate:full && pnpm run version:minor",
		"release:major": "pnpm run quality-gate:full && pnpm run version:major"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.1",
		"@radix-ui/react-avatar": "^1.1.10",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "^1.2.5",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@vercel/analytics": "^1.5.0",
		"autoprefixer": "^10.4.21",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.1",
		"googleapis": "^149.0.0",
		"jotai": "^2.12.4",
		"lucide-react": "^0.511.0",
		"mongodb": "^6.16.0",
		"next": "15.3.2",
		"next-auth": "^4.24.11",
		"next-themes": "^0.4.6",
		"postcss": "^8.5.4",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.62.0",
		"sanitize-html": "^2.17.0",
		"sonner": "^2.0.3",
		"tailwind-merge": "^3.3.0",
		"zod": "^3.25.28"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@next/eslint-plugin-next": "^15.3.3",
		"@tailwindcss/postcss": "^4",
		"@testing-library/jest-dom": "^6.7.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/sanitize-html": "^2.16.0",
		"@vitejs/plugin-react": "^5.0.0",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9",
		"eslint-config-next": "15.3.2",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-filename-rules": "^1.3.1",
		"eslint-plugin-import": "^2.31.1",
		"eslint-plugin-prettier": "^5.4.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"glob": "^10.3.10",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.5",
		"msw": "^2.10.5",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"shadcn": "^2.6.0",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.3.0",
		"typescript": "^5",
		"vitest": "^3.2.4"
	}
}
